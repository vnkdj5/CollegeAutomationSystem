<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result"
        android:id="@+id/textViewTitleResult"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSubjectRV"
        android:background="@android:drawable/btn_dropdown"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Result"
        style="@style/buttonStyle"
        android:padding="5dp"
        android:id="@+id/buttonResultView"  android:layout_marginBottom="20dp"

        android:layout_gravity="center_horizontal" />
    <View style="@style/DividerH"
        android:background="#6dbce9"
        android:layout_height="2dp"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Exam"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"/>
        <View style="@style/Divider"
            android:background="#6dbce9"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Marks"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <View style="@style/Divider"
            android:background="#6dbce9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Marks"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold" />
    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6dbce9"
        android:padding="1dp"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewRV"
            android:layout_gravity="center_horizontal"
            android:dividerHeight="1dp"
            android:divider="#6dbce9"
            android:background="@android:color/white"
            android:layout_margin="1dp"
            />
    </LinearLayout>

</LinearLayout>