<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Attendance"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/textViewShowAteendanceTitle"
        android:layout_marginBottom="10dp"/>
    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Enrollment No :"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:id="@+id/student_atten_show"
            android:text="_id:"
            android:textSize="20sp"
            android:layout_weight="0.36" />

    </TableRow>
    <View style="@style/DividerHB"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="beginning">

        <TextView

            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <View style="@style/DividerB" />

        <TextView
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:text="Lecture"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            />
        <View style="@style/DividerB" />
        <TextView
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:text="Practical"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            />

        <View style="@style/DividerB" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            />


    </TableRow>
    <View style="@style/DividerHB" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="beginning">

        <TextView

            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <View style="@style/DividerB"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="P"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center" />
        <View style="@style/Divider"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center" />
        <View style="@style/DividerB"/>

        <TextView
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="P"

            android:textStyle="bold"
            android:id="@+id/tvPP"
            android:gravity="center" />
        <View style="@style/Divider"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="A"
            android:gravity="center" />
        <View style="@style/DividerB" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L+P"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center" />


    </TableRow>
    <View style="@style/DividerH"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b2b2b2">

        <ListView
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewShowAt"
        android:dividerHeight="1dp"
        android:divider="#b2b2b2"

        />
        <View style="@style/DividerH"/>
    </LinearLayout>



            <TextView
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Note:\n\t For Any Changes, Contact your Subject Teacher."/>


</LinearLayout>